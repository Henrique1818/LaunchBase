{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="avatar_url" style="background: url(https://source.unsplash.com/collection/2467520/500x500) no-repeat center center / cover; border-radius: 4px 0 0 4px">
        </section>
        <section class="details">

            <h3>Details</h3>

            <div class="items">
                <div>Avatar Url</div>
                <div>{{teacher.avatar_url}}</div>
            </div>

            <div class="items">
                <div>Teacher</div>
                <div>{{teacher.name}}</div>
            </div>

            <div class="items">
                <div>Idade</div>
                <div>{{teacher.birth}}</div>
            </div>

            <div class="items">
                <div>Grau de escolaridade</div>
                <div>{{teacher.education_level}}</div>
            </div>

            <div class="items">
                <div>Tipo de aula</div>
                <div>{{teacher.class_type}}</div>
            </div>

            <div class="items">
                <div>Acompanhamento</div>
                <div>
                    <span>{{teacher.ocuppation}}</span>
                </div>
            </div>
            <div class="items">
                <div>Desde</div>
                <div>{{teacher.created_at}}</div>
            </div>
        </section>
    </div>
{% endblock %}