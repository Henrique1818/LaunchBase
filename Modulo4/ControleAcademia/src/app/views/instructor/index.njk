{% extends "layout.njk" %}

{% block content %}
    <div class="cards table-container">
        <a href="/instructors/create">Novo</a>
        <table width="100%">
            <thead>
               <tr>
                    <th>Instrutores</th>
                    <th>Atendimentos</th>
                    <th>Ação</th>
               </tr>
            </thead>
            <tbody>
                {%for instructor in instructors %}
                    <tr>
                        <td>
                            <span style="background-image: url({{instructor.avatar_url}})"></span>
                            {{instructor.name}}
                        </td>
                        <td>
                            {%for services in instructor.services %}
                                <span class="services">{{services}}</span>
                            {%endfor%}
                        </td>
                        <td><a href="/instructors/{{instructor.id}}">Ver</a></td>
                    </tr>
                {%endfor%}
            </tbody>
        </table>
    </div>
{% endblock content %}