{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="avatar_url" style="background: url(https://source.unsplash.com/collection/2467520/500x500) no-repeat center center / cover; border-radius: 4px 0 0 4px">
        </section>
        <section class="details">

            <h3>Detalhes</h3>

            <div class="items">
                <div>Professor(a)</div>
                <div>{{teacher.name}}</div>
            </div>

            <div class="items">
                <div>Idade</div>
                <div>{{teacher.birth}}</div>
            </div>

            <div class="items">
                <div>Grau de escolaridade</div>
                <div>{{teacher.education_level}}</div>
            </div>

            <div class="items">
                <div>Tipo de aula</div>
                <div>{{ "Presencial" if teacher.class_type === "Presential" else "À distância" }}</div>
            </div>

            <div class="items">
                <div>Acompanhamento</div>
                <div>
                    {% for occupation in teacher.subjects_taught %}
                        <span>{{occupation}}</span>
                    {% endfor %}
                </div>
            </div>
            <div class="items">
                <div>Desde</div>
                <div>{{teacher.created_at}}</div>
            </div>

            <a href="/teachers/{{teacher.id}}/edit" class="btn-edit">Editar</a>
        </section>
    </div>
{% endblock %}